{
    "version": 1,
    "disable_existing_loggers": false,
    "formaters": {
        "console": {
            "format": "%(levelname)-8s - %(message)s"
        },
        "file": {
            "format": "%(asctime)s %(message)s"
        }
    },
    "handlers": {
        "console_handler":{
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "console",
            "stream": "ext://sys.stdout"
        },
        "debug_handler":{
            "class": "logging.FileHandler",
            "formatter": "file",
            "level": "DEBUG",
            "filename": "deriv_debug",
            "mode": "a"
        },      
        "error_handler":{
            "class": "logging.FileHandler",
            "formatter": "file",
            "level": "WARNING",
            "filename": "deriv_error",
            "mode": "a"
            }
        }
}

